import numpy as np

# a. Get help on the add function
print("Help on np.add:")
help(np.add)

# b. Test whether none of the elements of a given array is zero
arr1 = np.array([1, 2, 3, 4, 5])
print("\nArray:", arr1)
print("None of the elements are zero:", np.all(arr1 != 0))

# c. Element-wise comparisons between two arrays
arr2 = np.array([1, 3, 2, 4, 5])
arr3 = np.array([1, 2, 3, 4, 5])

print("\nArray 2:", arr2)
print("Array 3:", arr3)

print("Greater:", np.greater(arr2, arr3))
print("Greater Equal:", np.greater_equal(arr2, arr3))
print("Less:", np.less(arr2, arr3))
print("Less Equal:", np.less_equal(arr2, arr3))
print("Equal:", np.equal(arr2, arr3))
print("All Close (within tolerance):", np.allclose(arr2, arr3, atol=1))

# Additional usage of zeros, ones, linspace, tolist
print("\nZeros array:", np.zeros(5))
print("Ones array:", np.ones(5))
print("Linspace array:", np.linspace(0, 1, 5))
print("Converted to list:", np.linspace(0, 1, 5).tolist())








